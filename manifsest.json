{
  "manifest_version": 2,
  "name": "Productivity Extension",
  "version": "1.0",
  "description": "Manage tasks and website access",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["storage.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}